---
import Time from '../../components/Time.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { createExcerpt } from '@lib/utils';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout seoTitle="Blog" >
  <h1>Blog</h1>
  <section class="posts__list">
    {
      posts.map((post) => (
        <div class="post__item">
          <div class="header">
            <h2>
              <a href={`/blog/${post.id}`}>{post.data.title}</a>
            </h2>
            <span class="published">
              Published on: <Time time={post.data.date} />
            </span>
          </div>
          <div class="excerpt">
          <p>{createExcerpt(post)}</p>
          <p><a href={`/blog/${post.id}`}>Read more <span class="brackets">&#187;</span></a></p>
          </div>
        </div>
        <div class="separator">
          <div class="line"></div><span>*</span><div class="line"></div>
        </div>
      ))
    }
  </section>
</BaseLayout>

<style>
  .posts__list {
    max-width: 60ch;
  }

  .header {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
    @media screen and (min-width: 40rem) {
      flex-direction: row;
      justify-content: space-between;
      
    }


    .published {
      font-size: 0.8rem;
      color: #999;
      @media screen and (min-width: 40rem) {
        align-self: end;
      }
   
    }
  }
  .excerpt {
    p{
      margin-bottom: 0;
      &:last-of-type{
        text-align: right;
      }
    }
    a {
      color: #999;
      font-size: 0.8rem;
      text-decoration: underline;
    
      &:hover{
        color: inherit;
      }
    }
  }
  .separator {
    margin: 1rem auto 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    .line {
      height: 1px;
      background-color: #999;
      width: 30%;
    }
    span{
      transform: translateY(.2rem);
    }
    &:last-of-type{
      display: none;
    }
  }

</style>
