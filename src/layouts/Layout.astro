<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <header>
      <nav>
        <a
          href="/"
          aria-current={Astro.url.pathname === '/' ? 'page' : undefined}>Home</a
        >
        <a
          href="/blog"
          aria-current={Astro.url.pathname.startsWith('/blog')
            ? 'page'
            : undefined}>Blog</a
        >
      </nav>
    </header>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  html {
    font-size: 112.5%;
    @media screen and (min-width: 40rem) {
      font-size: 125%;
    }
  }
  a {
    text-decoration: none;
    color: inherit;
    &:focus,
    &:hover {
      text-decoration: underline;
      font-weight: bold;
    }
  }
  nav {
    display: flex;
    gap: 20px;
    padding: 10px;
    a[aria-current='page'] {
      font-weight: bold;
